html
  head
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    title= content_for?(:title) ? yield(:title) : "HireEZ v2 [#{Rails.env}]"
    meta content=(content_for?(:description) ? yield(:description) : "Brutus") name="description" 
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  body class=("#{controller_name} #{action_name} #{user_signed_in? ? "user-signed-in" : ""}")
    header
      / = render 'layouts/navigation'
    main role="main"
      = render 'layouts/messages'
      = yield
    div.footer
      div style="float: left; width: 500px; padding: 10px 20px;"
        ul
          li= "There are #{@users.size} users in Hire-EZ v2."
          li= "We have received #{@applications.size} applications."
          li= "We have created #{@reviews.size} reviews."
      .tagline
        p It's HireEZier!
      br clear="both"